}
image {
  width: 100%;
  height: 100%;
}

page{
  font-size: 30rpx;
  --little-gray: #f8f8f8;
  --light-gray:#C1C0C9;
  --dark-gray:#aaa;
  --theme-color:#1FA4FC;
  --dark-blue:#053f92;
  --light-blue:#50C7FB;
  --little-mask:rgba(0,0,0,.03);
  --light-mask: rgba(0,0,0,.2);
  --light-white-mask:rgba(255,255,255,.5);
  --hightlight:#fc5531;
  --dark-hightlight:#ff455b;
  --suceess:#09bb07;
  font-family: Arial, Helvetica, sans-serif;
  color:#333;
}

.stretchy-wrapper{
  width: 100%;
  padding-bottom: 100%;
  height:0;
  position: relative;
}

.stretchy-area {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}