button:focus{
  outline: 0;
}

button::after{
  border: none;
}

page{
  font-size: 30rpx;
  --little-gray: #f8f8f8;
  --light-gray:#C1C0C9;
  --dark-gray:#aaa;
  --theme-color:#1FA4FC;
  --dark-blue:#3A6FF3;
  --light-blue:#50C7FB;
  --little-mask:rgba(0,0,0,.03);
  --light-mask: rgba(0,0,0,.2);
  --light-white-mask:rgba(255,255,255,.5);
  color:#262628;
  font-family: PingFangSC-Regular;
}

.stretchy-wrapper{
  width: 100%;
  padding-bottom: 100%;
  height:0;
  position: relative;
}

.stretchy-area {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}