/* components/search-box/search-box.wxss */
.search{
  display: flex;
  align-items: center;
}

.search-button, .search-box {
  box-sizing: border-box;
  padding: .25em 1em;
  background-color: #fff;
}
.search-box {
  height: 2em;
  border-radius: 1em;
  flex: 1;
}
.search-button {
  height: 1.8em;
  border-radius: .9em;
  margin-left: 20rpx;
}
.search-box__wrapper{
  padding: 0 2em;
  height: 100%;
  position: relative;
}
.search-box__input {
  display: inline-block;
  width: 100%;
  height: 100%;
}

.search-box__search {
  position: absolute;
  left: 0;
}

.search-box__cancel {
  display: inline-block;
  position: absolute;
  right: 0;
  width: 1.5em;
  background-color: var(--light-gray);
  transform: rotate(45deg);
  border-radius: 50%;
}