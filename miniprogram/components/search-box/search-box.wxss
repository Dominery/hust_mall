/* components/search-box/search-box.wxss */
.search-box {
  padding: .25em 1em;
  width: 100%;
  height: 2em;
  box-sizing: border-box;
  border-radius: 1em;
  background-color: #fff;
}
.search-box__wrapper{
  padding: 0 2em;
  height: 100%;
  position: relative;
}
.search-box__input {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.search-box__search {
  display: inline-block;
  position: absolute;
  right: 0;
}

.search-box__search--middle {
  left: 50%;
  margin-left: -1em;
}

.search-box__cancel {
  position: absolute;
  color: var(--light-gray);
  left: 0;
}