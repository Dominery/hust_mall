/* components/add-photo/add-photo.wxss */
.add-photo{
  padding: 20rpx 0;
  background-color: #fff;
  border-bottom: 1px solid var(--light-gray);
}
.add-photo__head {
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: baseline;
}
.add-photo__title {
  font-size: 35rpx;
}
.add-photo__num {
  font-size: 25rpx;
  color: var(--light-gray);
}
.add-photo__body {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.add-photo__item {
  width: 25%;
  padding: 20rpx;
  box-sizing: border-box;
}
.stretchy-wrapper{
  width: 100%;
  padding-bottom: 100%;
  position: relative;
}
.add-photo__wraper {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.add-photo__add {
  width: 100%;
  height: 100%;
  background-color: var(--little-gray);
  position: relative;
}

.add-photo__add__row,.add-photo__add__col {
  position: absolute;
  background-color: var(--dark-gray);
  transform: translate(-50%,-50%);
}

.add-photo__add__row {
  width: 50%;
  height: 3%;
  top: 50%;
  left: 50%;
}

.add-photo__add__col {
  width: 3%;
  height: 50%;
  top: 50%;
  left: 50%;
}

.add-photo__delete {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: var(--light-mask);
}

.add-photo__delete__icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}

.add-photo__itemImg {
  width: 100%;
  height: 100%;
}