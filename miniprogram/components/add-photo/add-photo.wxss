/* components/add-photo/add-photo.wxss */
.add-photo{
  width: 100%;
}
.add-photo__num {
  font-size: 25rpx;
  text-align: right;
  color: var(--light-gray);
}
.add-photo__body {
  display: flex;
  flex-wrap: wrap;
}
.add-photo__item {
  width: 25%;
  padding: 20rpx;
  box-sizing: border-box;
}

.add-photo__delete {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: var(--light-mask);
}

.add-photo__delete__icon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -30rpx;
  margin-top: -30rpx;
}

.add-photo__itemImg {
  width: 100%;
  height: 100%;
}