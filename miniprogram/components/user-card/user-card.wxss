/* components/user-card/user-card.wxss */
.user-card {
  text-align: center;
  padding: 10rpx 0;
  overflow: hidden;
  font-size: 1rem;
}
.user-card__img {
  border: 1px solid #fff;
  width: 3em;
  height: 3em;
  border-radius: 1.5em;
}
.user-card__name {
  display: block;
  text-align: center;
  font-weight: bold;
  margin-top: .25em;
  font-size: 1rem;
}