/* components/login/login.wxss */
.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,.2);
}

.authorized-box {
  position: fixed;
  width: 500rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 2;
}
.authorized-box__buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}

.authorized-box__button {
  margin: 0;
  width: 200rpx;
  font-size: 30rpx;
  color: #fff;
  box-shadow: 0 4rpx 5rpx rgba(0,0,0,.2);
}

.authorized-box__button--confirm {
  background-color: var(--theme-color);
}

.authorized-box__button--cancel {
  background-color: var(--little-gray);
  color: var(--light-gray);
}