/* components/login/login.wxss */
.mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,.2);
}

.authorized-box {
  position: fixed;
  width: 500rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.authorized-box__button {
  display: block;
  margin: auto;
  margin-top: 40rpx;
  padding: 10rpx 20rpx;
  width: 300rpx;
  font-size: 30rpx;
  background-color: #0091FF;
  color: #fff;
  box-shadow: 0 4rpx 5rpx rgba(0,0,0,.2);
}

