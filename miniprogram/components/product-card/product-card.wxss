/* components/product-card/product-card.wxss */
.product-card {
  display: flex;
  width: 100%;
  border-radius: 10rpx;
  background-color: #fff;
  overflow: hidden;
}
.product-card--col {
  flex-direction: column;
}
.product-card__img {
  width: 220rpx;
  height: auto;
  min-height: 180rpx;
  max-height: 500rpx;
}
.product-card__img--col{
  width: 100%;
  height: auto;
}

.product-card__content {
  padding: 10rpx 20rpx;
  flex: 1;
}

.product-card__title {
  font-weight: bold;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  white-space:normal !important;
  word-wrap:break-word;
}

.product-card__priceInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}

.product-card__price {
  color: var(--hightlight);
  font-size: 1.5em;
}

.product-card__priceIcon {
  font-size: 0.6em;
}

.product-card__slogan{
  display: inline-block;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  font-size: .6em;
  color: #fff;
  background-color: var(--dark-hightlight);
}

.product-card__slogan--gray {
  background-color: var(--light-gray);
}

.product-card__pos {
  color: var(--light-gray);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}