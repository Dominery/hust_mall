      <image 
      mode="aspectFill"
      src="cloud://hustmall-5gudfp1u6322154e.6875-hustmall-5gudfp1u6322154e-1307983764/images/3-c.jpg"
      ></image>
    </swiper-item>
    <swiper-item>
      <image 
      mode="aspectFill"
      src="cloud://hustmall-5gudfp1u6322154e.6875-hustmall-5gudfp1u6322154e-1307983764/images/2-c.jpg"
      ></image>
    </swiper-item>
    <swiper-item>
      <image 
      mode="aspectFill"
      src="cloud://hustmall-5gudfp1u6322154e.6875-hustmall-5gudfp1u6322154e-1307983764/images/1-c.jpg"
      ></image>
    </swiper-item>
  </swiper>
</view>

